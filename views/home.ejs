<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <%- include('partials/favicon') %>
  <%- include('partials/bootstrap') %>

</head>

<body>
  <%- include('partials/header') %>
  <%- include('partials/nav') %>

  
  <!-- DISPLAY SUGGESTED ARTISTS -->
  <div class="suggested-artists-container">
    <h2 class='center-align-text'>Suggested Artists</h2>
    <div class="suggested-artists-scroll">
      <% for (let artist of artistSuggestions) { %>
        <a href="/artist-info?artist=<%= artist.name %>" class="artist-card">
           <img src="<%= artist.thumbnailUrl %>" alt="<%= artist.name %>" class="artist-thumbnail">
          <span class="artist-name"><%= artist.name %></span>
        </a>
      <% } %>
    </div>
  </div>

  <!-- DISPLAY PUBLIC PLAYLISTS -->
  <section class="public-playlists-section">
    <% if (publicPlaylists.length > 0) { %>
      <div class="suggested-artists-container">
        <h2 class='center-align-text'>Popular Public Playlists</h2>
        <div class="grid-container">
          <% for (let pl of publicPlaylists) { %>
            <a href='/playlists/view/<%= pl.PlaylistID %>' class="grid-item-link">
              <div class="grid-item playlist-card">
                <div class="playlist-icon">
                  <i class="fas fa-music"></i>
                </div>
                <h4 class="grid-text-item"><%= pl.PlaylistName %></h4>
                <p class="grid-text-item">
                  <i class="fas fa-heart"></i> <%= pl.Likes %> likes
                </p>
              </div>
            </a>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <div class="empty-state">
        <h4 class="nothing-found-msg">No public playlists available</h4>
        <p class="nothing-found-msg">Create your first playlist and make it public!</p>
      </div>
    <% } %>
  </section>
        
  <script src="/js/search.js"></script>
  <script src="/js/login.js"></script>
</body>
</html>